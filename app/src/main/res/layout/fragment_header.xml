<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#CCCCCC"
    android:padding="8dp">

    <TextView
        android:id="@+id/cityHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="City(H)"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/deviceHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Device(H)"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/problemHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Problem(H)"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/customerHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Customer(H)"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/processedHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Processed(H)"
        android:textStyle="bold"
        android:gravity="center"/>
</LinearLayout>
